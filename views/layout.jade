html(xmlns="http://www.w3.org/1999/xhtml")
    head
        meta(name=viewport content="width=device-width, initial-scale=1")
        block title
        -title = title+' - '+'Francesco Gaudenzi'
        title= title

        link(rel="stylesheet" type="text/css" href="/assets/css/style.css")
        block css
    body
        #GaudoNet__siteWrapper
            #GaudoNet__siteGradient
                header#GaudoNet__siteHeader
                    #GaudoNet__siteAuthor_picture
                        img(id="GaudoNet__siteAuthor_picture_image" src="/assets/img/gaudo.jpg")
                    #GaudoNet__siteAuthor
                        h1#GaudoNet__siteAuthor_name Francesco Gaudenzi
                        ul#GaudoNet__siteAuthor_jobs
                            li Web Developer
                            li Programmatore
                            li Studente di informatica
                            li Gamer
                
                nav
                    ul#GaudoNet__siteMenu
                        block selected
                        - var list = {"Home": getRouteUrl('home'), "Guide": getRouteUrl('guides'), "Competenze": getRouteUrl('skills'), "Chi sono": getRouteUrl('about_me')}
                        each key,item in list
                            if selected === item
                                li.GaudoNet__siteMenu_item-selected
                                   span(class="GaudoNet__siteMenu_link-noref")= item
                            else
                                li.GaudoNet__siteMenu_item
                                    a(href="#{key}" class="GaudoNet__siteMenu_link")= item

                main#GaudoNet__siteContent
                    block content

            footer#GaudoNet__siteFooter
                p.GaudoNet__siteFooter_line Sito internet ideato e realizzato dall'autore.
                p.GaudoNet__siteFooter_line Tutti i diritti riservati.
