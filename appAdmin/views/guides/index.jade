extends ../layout.jade

block content
    a(href="#{routeToUrl('guides-addView')}") Aggiungi guida
    if guides[0]
        table
            tr
                th(colspan="2") GUIDE
            each guide in guides
                tr
                    td= guide.created.getDate()+'/'+guide.created.getMonth()+1 + '/'+guide.created.getFullYear() + ' - ' + guide.created.getHours() + ':' + guide.created.getMinutes()
                        
                    td
                        a(href="#{routeToUrl('guides-show', {'id': guide.id})}")= guide.title

    else
        p Non sono presenti record
