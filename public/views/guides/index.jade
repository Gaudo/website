extends ../layout.jade

block vars
    -title= "Guide avanzate di informatica"
    -selected= "Guide"

block content
    h1.GaudoNet__siteContent_title Guide
    ul
        if guides[0]
            each guide in guides
                li
                    a(href="#{route('guide-show', {id: guide.id, title: guide.title})}" class="") <strong>#{guide.title}</strong>
        else
            p Non sono presenti record
